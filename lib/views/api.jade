extends ./_layouts/horoscope

block append styles
    style.
        code{background-color:#fff;padding:0px 3px;display:inline;border-radius:3px;border:1px solid #eee;font-weight:bold;overflow-wrap: break-word;}
        .report-body{overflow: hidden;padding-top:0px !important;}

block horoscope_content
    .clearfix
        .pull-right
            .social-likes(data-url=site.head.canonical)
                each item in config.shareDataServices
                    div(class=item)
        .page-title
            h1= title
            h2.sub-title= subTitle
    br
    .report-body!= body
    br
    .fb-comments(data-href=site.head.canonical, data-numposts="5", data-width="100%")
    br
    include _includes/ad-bottom
    //- br
    //- a(class='btn-more', href=links.horoscope.sign())

block prepend right_content_bottom
    .group
        .ads-block.ads-600
            // Ournet horoscope right
            ins.adsbygoogle(style='display:block', data-ad-client='ca-pub-3959589883092051', data-ad-slot='9547245832', data-ad-format='auto')
            script.
                (adsbygoogle = window.adsbygoogle || []).push({});

block append scripts
    script.
        (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/#{site.simpleLocale}/sdk.js#xfbml=1&version=v2.6&appId=#{config.facebookId}";
        fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));