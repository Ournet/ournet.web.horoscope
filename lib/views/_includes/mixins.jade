mixin horoscopeDayReport(report, date)
  - var signName = util.signName(report.sign, currentCulture.language)
  .report.clearfix
    if (date)
      .report-date=date
    .report-head
      a(href=links.horoscope.sign(signName.slug))
        i.zodiacs(class=('zs-'+report.sign))
        h4= signName.name
    .report-body
      != util.encodeReportText(report.text)

mixin horoscopeWeekReport(report, date)
  - var signName = util.signName(report.sign, currentCulture.language)
  .report.clearfix
    if (date)
      .report-date=date
    .report-head
      a(href=links.horoscope.sign.period(signName.slug, config.weeklyName))
